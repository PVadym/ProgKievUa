<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Sample</servlet-name>
        <servlet-class>ua.kiev.prog.SampleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sample</servlet-name>
        <url-pattern>/sample</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>SampleParam</servlet-name>
    <servlet-class>ua.kiev.prog.SampleParamServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>SampleParam</servlet-name>
        <url-pattern>/testparam</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ua.kiev.prog.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Opened</servlet-name>
        <servlet-class>ua.kiev.prog.OpenedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Opened</servlet-name>
        <url-pattern>/opened</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Question</servlet-name>
        <servlet-class>ua.kiev.prog.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Question</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>